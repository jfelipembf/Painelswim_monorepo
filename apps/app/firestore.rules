rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function memberDoc(idTenant) {
      return get(/databases/$(database)/documents/tenants/$(idTenant)/members/$(request.auth.uid));
    }

    function isMember(idTenant) {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/tenants/$(idTenant)/members/$(request.auth.uid));
    }

    function hasBranch(idTenant, idBranch) {
      return isMember(idTenant) && idBranch in memberDoc(idTenant).data.branchIds;
    }

    function hasTenantRole(idTenant, allowedRoles) {
      return isMember(idTenant) && memberDoc(idTenant).data.role in allowedRoles;
    }

    function isProtectedBranchDoc(document) {
      return document.matches('^roles(/.*)?$');
    }

    match /tenantsBySlug/{slug} {
      allow get: if true;
      allow list: if false;
      allow write: if false;
    }

    match /tenants/{idTenant} {
      // Dados publicos devem ficar leves (nome/branding). Para dados sensiveis, use subcolecoes.
      allow get: if resource.data.status == "active" || isMember(idTenant);
      allow list: if false;
      allow write: if false;

      match /members/{uid} {
        allow get: if (request.auth != null && request.auth.uid == uid) ||
          hasTenantRole(idTenant, ["owner", "manager"]);
        allow list: if false;
        allow write: if hasTenantRole(idTenant, ["owner", "manager"]);
      }

      match /roles/{roleId} {
        allow read, write: if false;
      }

      match /staff/{staffId} {
        allow read: if isMember(idTenant);
        allow write: if hasTenantRole(idTenant, ["owner", "manager"]);
      }

      match /branches/{idBranch} {
        allow get: if hasBranch(idTenant, idBranch);
        allow list: if false;
        allow write: if false;
      }

      match /branches/{idBranch}/{document=**} {
        allow read: if hasBranch(idTenant, idBranch);
        allow write: if hasBranch(idTenant, idBranch) && !isProtectedBranchDoc(document);
      }

      match /branches/{idBranch}/roles/{roleId} {
        allow read: if hasBranch(idTenant, idBranch);
        allow write: if hasTenantRole(idTenant, ["owner", "manager"]);
      }
    }
  }
}
