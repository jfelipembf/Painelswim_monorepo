{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "lib": ["es2017"],
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  },
  "compileOnSave": true,
  "include": ["src"]
}
